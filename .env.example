# Database
DATABASE_URL=postgresql://codeverify:codeverify@localhost:5432/codeverify

# Redis
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development

# GitHub App (get these from your GitHub App settings)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY_PATH=./github-app-key.pem
GITHUB_WEBHOOK_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitLab Integration (optional)
GITLAB_TOKEN=
GITLAB_WEBHOOK_SECRET=

# Bitbucket Integration (optional)
BITBUCKET_APP_KEY=
BITBUCKET_APP_SECRET=
BITBUCKET_WEBHOOK_SECRET=

# LLM Providers (at least one required for AI analysis)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Optional: GitHub Copilot SDK
COPILOT_SDK_TOKEN=

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Worker Settings
WORKER_CONCURRENCY=4

# Web Settings
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security
SECRET_KEY=change-this-in-production-use-a-long-random-string
JWT_SECRET=change-this-in-production-use-a-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_ANALYSES=10/minute

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_FORMAL_VERIFICATION=true
ENABLE_AI_ANALYSIS=true
ENABLE_SECURITY_SCANNING=true
ENABLE_TRUST_SCORE=true
ENABLE_DIFF_SUMMARIZER=true

# Notifications
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Scheduled Scans
SCAN_SCHEDULE_ENABLED=true
SCAN_DEFAULT_CRON=0 0 * * *

# Public API
PUBLIC_API_ENABLED=true
API_KEY_PREFIX=cv_

# Stripe (for billing - optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_TEAM=
STRIPE_PRICE_ID_ENTERPRISE=
